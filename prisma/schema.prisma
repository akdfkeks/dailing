// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    uuid         String        @id @default(value: uuid())
    id           String        @unique
    pw           String
    name         String
    // profileImage String        @default(value: "")
    family       Family?       @relation(fields: [familyId], references: [uuid], onUpdate: Cascade)
    familyId     String?
    ScheduleCart ScheduleBox[]
}

model Family {
    uuid String @id @default(uuid())
    name String
    User User[]
}

model ScheduleBox {
    uuid      String     @default(value: uuid())
    yearMonth Int
    user      User?      @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    userId    String
    schedules Schedule[]

    @@id(fields: [userId, yearMonth])
    @@unique([userId, yearMonth])
}

model Schedule {
    uuid        String       @id @default(value: uuid())
    title       String       @default(value: "")
    content     String       @default(value: "")
    targetDate  DateTime     @default(value: now())
    lat         Float
    lng         Float
    createdAt   DateTime     @default(value: now())
    isDone      Boolean      @default(value: false)
    ScheduleBox ScheduleBox? @relation(fields: [userId, yearMonth], references: [userId, yearMonth], onUpdate: Cascade, onDelete: Cascade)
    userId      String?
    yearMonth   Int?
}
